// Write a C++ program to calculate LCM of two numbers.
#include<iostream>
using namespace std;
int main()
{
    int a, b, value;
    cout << "enter 1st number: ";
    cin >> a;
    cout << "enter 2nd number: ";
    cin >> b;
    if(a >= b)
    {
        value = a;
    }
    else {
        value = b;
    }
    while(1)
    {
        if(0 == value % a && 0 == value % a)    {
            cout << value ;
            break;
        }
        value++;
    }
}
